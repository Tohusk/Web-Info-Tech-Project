<h1 id="loginTitle">{{context}} Log In</h1>
<div class="signInContainer">
	{{#if vendor}}
	<form method="post" action="/{{context}}/login">
		<input placeholder="name" name='name' id='name' value="" />
		<input placeholder="password" type="password" name='password' id='password' value="" />
		<input class="loginButton" type="submit" value="Login">
	</form>
	{{else}}
	<form method="post" action="/{{context}}/user/login">
		<input placeholder="email" name='email' id='email' value="" />
		<input placeholder="password" type="password" name='password' id='password' value="" />
		<input class="loginButton" type="submit" value="Log In">
		<input class="loginButton" type="button" value="Sign up" onclick="location.href='/customer/user/signup';">
		<input class="loginButton" type="button" value="Vendor Log In" onclick="location.href='/vendor/login';">
	</form>
	{{/if}}
</div>
<input type="hidden" name="error" id="error" value="{{error}}" />
<script>
	//alert message if there is one
	if (document.getElementById('error').value.length !== 0) {
		alert(document.getElementById('error').value);
	}

</script>
